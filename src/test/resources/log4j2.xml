<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="warn">
    <Appenders>
        <Console name="console" target="SYSTEM_OUT">
            <PatternLayout pattern="[%-5level] %d{yyyyMMdd-HHmmss} [%t] %M- %msg%n"/>
        </Console>
    </Appenders>

    <RollingFile name="rollingfile" fileName=".\log.log" filePattern=".\log-%d{yyyyMMddHHss}.log">
        <PatternLayout>
            <pattern>[%-5level] %d{yyyyMMdd-HHmmss} [%t] %M- %msg%n
            </pattern>
        </PatternLayout>
        <Policies>
            <OnStartupTriggeringPolicy/>
        </Policies>

    </RollingFile>

    <Loggers>
        <Root level="all">
            <AppenderRef ref="console" level="all"/>
            <AppenderRef ref="rollingfile" level="all"/>
        </Root>
    </Loggers>
</Configuration>